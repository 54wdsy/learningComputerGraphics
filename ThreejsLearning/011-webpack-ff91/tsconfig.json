{
  "compilerOptions": {
    // "outDir": "./dist",
    "outFile": "./dist/ff91.js",
    "target": "ES5",
    "module": "amd",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitThis": true,
    "paths": {
      "@/*": [
        "src/*.ts"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es6",
      "es5"
    ]
  },
  "include": [
    // "src/**/*.ts",
    // "src/**/*.tsx",
    // "src/**/*.vue",
    // "tests/**/*.ts",
    // "tests/**/*.tsx",
    "src/*.ts"
  ],
  "exclude": [
    // "node_modules"
  ],
  "typedocOptions": {
    "mode": "modules",
  }
}
